<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeSection.Home"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="25dp"
    android:paddingBottom="70dp">

    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:textColor="#111"
                    app:placeholderTextColor="#111"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    app:endIconMode="clear_text"
                    android:hint="@string/search">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/search_input_home"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:targetApi="jelly_bean" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/search_button_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@android:drawable/ic_menu_search" />

                <ImageButton
                    android:paddingStart="10dp"
                    android:id="@+id/barcode_button_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@drawable/qrcode_icon" />


            </LinearLayout>

            <LinearLayout
                android:paddingVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/sec_shape"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/categoriesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    android:textColor="@color/black"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/category1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="12dp"
                        android:backgroundTint="@color/darkWhite"
                        android:text="A"
                        android:textColor="@color/black">

                    </Button>

                    <Button
                        android:id="@+id/category2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="12dp"
                        android:backgroundTint="@color/darkWhite"
                        android:text="B"
                        android:textColor="@color/black">

                    </Button>

                    <Button
                        android:id="@+id/category3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="12dp"
                        android:backgroundTint="@color/darkWhite"
                        android:text="C"
                        android:textColor="@color/black">

                    </Button>
                </LinearLayout>

                <Button
                    android:id="@+id/categoryMore"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/categoryMore"
                    android:textColor="@color/black"
                    android:textSize="10dp">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sec_shape"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="15dp">

                <TextView
                    android:id="@+id/recentLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/recent"
                    android:textColor="@color/black"></TextView>

                <LinearLayout
                    android:id="@+id/heading_review_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="23dp"
                    android:paddingTop="5dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/name"
                        android:textColor="#111"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/rate"
                        android:textColor="#111"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/feedback"
                        android:textColor="#111"
                        android:textSize="18sp" />


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewReviewHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/review_product_section"
                    android:layout_marginTop="7dp"
                    android:paddingHorizontal="10dp"></androidx.recyclerview.widget.RecyclerView>

