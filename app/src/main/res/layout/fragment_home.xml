<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeSection.Home"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="25dp"
    android:paddingBottom="70dp">

    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/search"
                    android:textColor="#111"
                    app:endIconMode="clear_text"
                    app:placeholderTextColor="#111">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/search_input_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        tools:targetApi="jelly_bean" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/search_button_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@android:drawable/ic_menu_search" />

                <ImageButton
                    android:id="@+id/barcode_button_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@drawable/qrcode_icon" />

                <ImageButton
                    android:id="@+id/search_history_home"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat = "@drawable/history_icon"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/sec_shape"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="10dp">


                <TextView
                    android:id="@+id/categoriesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    android:textColor="@color/black"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:layout_marginHorizontal="6dp"
                        android:id="@+id/sneakers"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/darkWhite"
                        app:srcCompat="@drawable/snickers">

                    </ImageButton>

                    <ImageButton
                        android:layout_marginHorizontal="6dp"
                        android:id="@+id/tshirt"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/darkWhite"
                        app:srcCompat="@drawable/tshirt">

                    </ImageButton>



                    <ImageButton
                        android:layout_marginHorizontal="6dp"
                        android:id="@+id/nike"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/darkWhite"
                        app:srcCompat="@drawable/nike">

                    </ImageButton>



                    <ImageButton
                        android:layout_marginHorizontal="6dp"
                        android:id="@+id/male"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/darkWhite"
                        app:srcCompat="@drawable/male">

                    </ImageButton>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:layout_marginHorizontal="6dp"
                        android:id="@+id/shorts"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/darkWhite"
                        app:srcCompat="@drawable/shorts">

                    </ImageButton>

                    <ImageButton
                        android:layout_marginHorizontal="6dp"
                        android:id="@+id/sandals"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/darkWhite"
                        app:srcCompat="@drawable/sandals">

                    </ImageButton>

                    <ImageButton
                        android:layout_marginHorizontal="6dp"
                        android:id="@+id/cosmetics"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/darkWhite"
                        app:srcCompat="@drawable/cosmetics">

                    </ImageButton>

                    <ImageButton
                        android:layout_marginHorizontal="6dp"
                        android:id="@+id/female"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/darkWhite"
                        app:srcCompat="@drawable/female">

                    </ImageButton>



                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sec_shape"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/recentLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/recent"
                    android:textColor="@color/black"></TextView>

                <LinearLayout
                    android:id="@+id/heading_review_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="23dp"
                    android:paddingTop="5dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/name"
                        android:textColor="#111"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/rate"
                        android:textColor="#111"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/feedback"
                        android:textColor="#111"
                        android:textSize="18sp" />


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewReviewHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/review_product_section"
                    android:layout_marginTop="7dp"
                    android:paddingHorizontal="10dp"></androidx.recyclerview.widget.RecyclerView>

